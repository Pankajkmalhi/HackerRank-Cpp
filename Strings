#include <iostream>
#include <string>
using namespace std;

int main() {
    string str1,str2;
    cin>>str1;
    cin>>str2;
    int l1=str1.size();
    int l2=str2.size();
    
    
    cout<<l1<<" "<<l2<<endl;
    cout<<str1+str2<<endl;
    cout<<str2[0];
    for(int i=1;i<l1;i++)
    {
        cout<<str1[i];
    }
    cout<<" "<<str1[0];
    for(int j=1;j<l2;j++)
    {
         cout<<str2[j];
    }
    return 0;
}
